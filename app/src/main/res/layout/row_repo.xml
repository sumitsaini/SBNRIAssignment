<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/normal_padding"
    app:cardElevation="@dimen/normal_padding"
    android:id="@+id/card_parent"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/large_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_xs" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/text_black_heading"
            android:textSize="@dimen/font_l" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_padding"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_weight="0.8"
                android:layout_marginRight="@dimen/large_padding"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_xs" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Issues"
                android:gravity="right"
                android:layout_weight="0.2"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_xs" />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_weight="0.8"
            android:layout_marginRight="@dimen/large_padding"
            android:textColor="@color/text_black_heading"
            android:textSize="@dimen/font_s" />


        <TextView
            android:id="@+id/tv_issues"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Issues"
            android:gravity="right"
            android:layout_weight="0.2"
            android:textColor="@color/text_black_heading"
            android:textSize="@dimen/font_s" />


    </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permission"
            android:layout_marginTop="@dimen/medium_padding"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_xs" />

        <TextView
            android:id="@+id/tv_permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="permission"
            android:textColor="@color/text_black_heading"
            android:textSize="@dimen/font_s" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="license"
            android:layout_marginTop="@dimen/medium_padding"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_xs" />

        <TextView
            android:id="@+id/tv_license"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="license"
            android:textColor="@color/text_black_heading"
            android:textSize="@dimen/font_s" />




    </LinearLayout>

</androidx.cardview.widget.CardView>
